<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BoardDAO"> 
<!-- 게시글 추가 : 파라미터 필요 타입(VO)  -->
<insert id="insertBoard" parameterType="board"> 
	INSERT INTO boards 
	 VALUES (('b00000'||boards_bid_seq.nextval),#{b_writer},#{b_title},#{b_content},#{b_pwd},sysdate)
</insert> 
<!-- 로그인 : 파라미터 필요 : VO 결과값 필요 : VO 
	 id중복여부 : 파라미터 필요 : VO 결과값 필요 : VO
-->
<select id="showBoardList" parameterType="board" resultType="board">
	SELECT m_email,m_pwd,m_name,m_birthday 
	 FROM members
	WHERE m_email = #{m_email}
	<if test="m_pwd != null">
	  AND m_pwd = #{m_pwd} 
	</if>
</select>
